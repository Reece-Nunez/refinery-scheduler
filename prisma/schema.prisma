generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  OPER
}

enum Team {
  A
  B
  C
  D
}

model Operator {
  id           String     @id @default(cuid())
  employeeId   String     @unique
  name         String
  role         String
  team         Team
  shiftHistory Shift[]
  trainedJobs  Job[]      @relation("OperatorJobs")
  user         User?      @relation("UserOperator") // just the name, no fields/references
  createdAt    DateTime   @default(now())
}

model Shift {
  id           String     @id @default(cuid())
  operator     Operator   @relation(fields: [operatorId], references: [id])
  operatorId   String
  startTime    DateTime
  endTime      DateTime
  isOverridden Boolean    @default(false)
  createdAt    DateTime   @default(now())
}

model User {
  id          String   @id @default(cuid())
  email       String   @unique
  password    String
  employeeId  String   @unique
  role        Role     @default(OPER)

  operator    Operator? @relation("UserOperator", fields: [employeeId], references: [employeeId])

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("users")
}

model Job {
  id         String     @id @default(cuid())
  title      String     @unique
  operators  Operator[] @relation("OperatorJobs")
}
